= form_with model: waypoint, url: flight_waypoint_path(@flight, waypoint), id: dom_id(waypoint, 'inline_form') do |f|
  .form-row
    .col-1= waypoint.number
    .col-2= f.text_field :name, class: 'form-control form-control-sm'
    .col-4= f.text_field :position, class: 'form-control form-control-sm'
    .col-1= f.text_field :altitude, class: 'form-control form-control-sm'
    .col-2.form-row= f.time_select :tot, { include_blank: true, ignore_date: true }, class: 'form-control col form-control-sm'
    .col-2= f.submit 'Update', class: 'btn btn-primary btn-sm'
